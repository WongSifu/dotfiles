# general
alias history='history 1'
alias h='history'

# dot files git repo
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# zsh
alias d='dirs -v'
for index ({1..9}) alias "$index"="cd +${index} > /dev/null"; unset index # directory stack

# exa to ls 
alias ls='exa'                                                 # ls
alias l='exa -labF --git --sort=Name'                          # list, size, type, git
alias ll='exa -lbGF --git'                                     # long list
alias la='exa -la --time-style=long-iso --git --color-scale'   # all list
alias lD='exa -lD --time-style=long-iso --git --color-scale'   # all + extended list
alias lt='exa --tree --level=2'                                # tree
alias lh='exa -ld .*'                                          # List Hidden only

# git aliases
alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gpo='git push origin'
alias gtd='git tag --delete'
alias gtdr='git tag --delete origin'
alias gr='git branch -r'
alias gplo='git pull origin'
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias gco='git checkout '
alias gl='git log'
alias gr='git remote'
alias grs='git remote show'
alias glo='git log --pretty="oneline"'
alias glol='git log --graph --oneline --decorate'

# tmux
alias tmuxk='tmux kill-session -t'
alias tmuxa='tmux attach -t'
alias tmuxl='tmux list-sessions'

# Grep
alias grep="grep -P -i --color=auto"

